{
  "manifest_version": 2,

  "name": "Sci-Hub-Fy",
  "description": "Free access to scientific articles through Sci-Hub service.",
  "version": "1.6.1",

  "permissions": [
     "activeTab",
     "tabs",
     "contextMenus",
     "storage"
  ],

 "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": "img/icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  }
}
